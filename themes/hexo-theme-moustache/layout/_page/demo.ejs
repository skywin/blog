		<div class="toggle-box">
			<h2>» 技术文档 <span>(+)</span></h2>
			<ul data-name="st">
				<% var st = site.data.text.st;
				Object.keys(st).forEach(function(item){
					   var path = st[item];
				%>
				<li itemscope itemtype="http://schema.org/Article">
					<h3><a href="<%- path %>" itemprop="url"><%- item %></a></h3>
				</li>
				<% }) %>
			</ul>
		</div>
		<div class="toggle-box">
			<h2>» 工具列表 <span>(+)</span></h2>
			<ul data-name="tools">
				<% var tools = site.data.text.tools;
				Object.keys(tools).forEach(function(item){
					   var path = tools[item];
				%>
				<li itemscope itemtype="http://schema.org/Article">
					<h3><a href="<%- path %>" itemprop="url"><%- item %></a></h3>
				</li>
				<% }) %>
			</ul>
		</div>
	</div>
	<div style="padding: 0 20px;">
	<%- partial("page_footer") %>
	</div>
</div>
<%- partial("../_partial/sidebar") %>
<script>
	$(".toggle-box h2").on("click", function(){
		if($(this).next()) {
			$(this).next().slideToggle(300);
			if($(this).parent().find("ul").size()) {
				$(this).children("span").toggle();
			}
		}
	});
	function changeURL(){
		var hash = window.location.hash;
		if(hash && (hash = hash.slice(1))) {
			$("ul[data-name='" + hash + "']").slideDown();
		}
	}
	$(window).on("hashchange", function(){
		changeURL();
	}).trigger("hashchange");
</script>